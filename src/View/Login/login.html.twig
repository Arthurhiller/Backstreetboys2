{% extends 'layout.html.twig' %}

{% block title %}
Login | {{ parent() }}
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="../assets/css/Login-Form-Clean.css">
{% endblock %}

{% block content %}
<div class="login-clean">
    <form method="post">
        <h1 class="text-center">Login</h1>
        <small style="visibility:hidden" class="form-text text-muted">Help text for a form field.</small>
        <div class="form-group">
            <input class="form-control" type="username" name="username" placeholder="Username">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
            <button class="btn btn-light active btn-block" type="submit" name="submit">To login</button>
        </div>
        <a class="forgot" style="visibility:hidden" href="#">Forgot password ?</a>
    </form>
</div>
{% endblock %}
